@model IWebPage
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@Model.BrowserTitle</title>
    <environment include="Development">
        <meta name="robots" content="noindex, nofollow">
        <link rel="stylesheet" href="~/compiled/site.css" asp-append-version="true" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/compiled/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <div class="bg-forever">
        <div class="nav-scroller py-1 mb-2 container">
            <nav class="nav d-flex">
                <a class="p-2 text-white" asp-controller="Home" asp-action="Index"><span class="oi oi-home"></span></a>
                <a class="p-2 text-white" asp-controller="Blog" asp-action="Index">Blog</a>
                <a class="p-2 text-white" href="/static/code">Code</a>
                <a class="p-2 text-white" href="/static/work">Work</a>
                @*<a class="p-2 text-white" href="/search"><span class="oi oi-magnifying-glass"></span></a>*@
            </nav>
        </div>
    </div>
    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <footer class="blog-footer text-dark bg-secondary">
        <p>&copy; @DateTime.Now.Year</p>
    </footer>
    <environment include="Development">
        <script src="~/compiled/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/compiled/site.min.js" asp-append-version="true"></script>
    </environment>
    @RenderSection("Scripts", required: false)
</body>
</html>
